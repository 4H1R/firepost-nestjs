// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  name            String
  username        String    @unique
  password        String
  email           String    @unique
  image           String?
  bio             String?
  isVerified      Boolean   @default(false)
  emailVerifiedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  followers  UserFollowers[] @relation(name: "followers")
  followings UserFollowers[] @relation(name: "followings")

  @@map("users")
}

model UserFollowers {
  userId     Int
  followerId Int

  createdAt DateTime @default(now())

  user     User @relation(name: "followers", fields: [userId], references: [id])
  follower User @relation(name: "followings", fields: [followerId], references: [id])

  @@id([userId, followerId])
  @@map("user_followers")
}
